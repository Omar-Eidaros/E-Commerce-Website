<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.store.handleListenerContext</listener-class>
    </listener>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>com.mycompany.techstore2.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleInitServer</servlet-name>
        <servlet-class>com.store.HandleInitServer</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>validateAddProduct</servlet-name>
        <servlet-class>handleValidationToDB.validateAddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validateDeleteProduct</servlet-name>
        <servlet-class>handleValidationToDB.validateDeleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validateUserLogin</servlet-name>
        <servlet-class>handleValidationToDB.validateUserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validateAdminLogin</servlet-name>
        <servlet-class>handleValidationToDB.validateAdminLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleInitServer</servlet-name>
        <url-pattern>/HandleInitServer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateAddProduct</servlet-name>
        <url-pattern>/validateAddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateDeleteProduct</servlet-name>
        <url-pattern>/validateDeleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateUserLogin</servlet-name>
        <url-pattern>/validateUserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateAdminLogin</servlet-name>
        <url-pattern>/validateAdminLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
